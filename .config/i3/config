font pango:Hack Regular 11

set $background #262626
set $primary    #5294e2
set $secondary  #5f676a
set $tertiary   #bbbbbb
set $alert      #ff7f24
set $foreground #F5F6F7

#colorclass             border             backgr.     text        indicator   child_border
client.focused          $primary    $primary    $foreground $primary    $primary
client.unfocused        $background $background $secondary $background $background
client.focused_inactive $secondary  $background $foreground  $secondary  $secondary
client.urgent           $alert      $alert      $foreground $alert      $alert

client.background       $background

#set modkey to meta key
set $mod mod4 
set $up k
set $down j
set $left h
set $right l

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# start a terminal
bindsym $mod+Return exec --no-startup-id $term -e tmux
bindsym $mod+Shift+Return exec --no-startup-id $term
# kill focused window. Don't ever kill the dropdowns, you moron.
bindsym $mod+q [con_id="__focused__" title="^(?!i3_dropdown_).*$"]kill
bindsym $mod+d exec dmenu_run -l 20

bindsym $mod+x exec display_auto
bindsym $mod+Shift+x exec display_standalone

# change focus
bindsym $mod+$left  focus tiling; focus left
bindsym $mod+$down  focus tiling; focus down
bindsym $mod+$up    focus tiling; focus up
bindsym $mod+$right focus tiling; focus right

# move focused window
bindsym $mod+Shift+$left  move left 38 px
bindsym $mod+Shift+$down  move down 38 px
bindsym $mod+Shift+$up    move up 38 px
bindsym $mod+Shift+$right move right 38 px

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
# focus the parent container
bindsym $mod+a focus parent
# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
bindsym $mod+minus [title="^(?!i3_dropdown_).*$"]scratchpad show

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# black out a screen
bindsym $mod+Shift+f exec feh -F ~/.assets/images/pitchblack.png

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# split in vertical orientation
bindsym $mod+v split v
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# toggle sticky 
bindsym $mod+g sticky toggle

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+r restart
bindsym $mod+r exec remapkeyboard

bindsym $mod+y resize shrink width 25 px or 6 ppt
bindsym $mod+u resize grow height 25 px or 6 ppt
bindsym $mod+i resize shrink height 25 px or 6 ppt
bindsym $mod+o resize grow width 25 px or 6 ppt

bindsym $mod+Shift+y resize shrink width 4 px or 1 ppt
bindsym $mod+Shift+u resize grow height 4 px or 1 ppt
bindsym $mod+Shift+i resize shrink height 4 px or 1 ppt
bindsym $mod+Shift+o resize grow width 4 px or 1 ppt

#block/suspend
bindsym $mod+Shift+b exec "i3lock -f -c 3f2f3f && systemctl suspend"
bindsym $mod+b exec "mpvctl pause"; exec "i3lock -f -c  3f2f3f"

bindsym --release $mod+p exec "scrot -s ~/tmp_screenshot.png && xclip -selection clip-board -t image/png -i ~/tmp_screenshot.png"
bindsym --release $mod+Shift+p exec "grabc |head --bytes=7|xclip && notify-send $(xclip -o)"

set $mode_launcher "Run: [q]utebrowser, [c]chome, [d]isplayselect, [n]autilus, [p]avucontrol, [v]scode, [r]etroarch, [m]ongo, [s]ql"
bindsym $mod+backslash mode $mode_launcher

mode $mode_launcher{
  bindsym q       exec qutebrowser                      ; mode "default"
  bindsym c       exec google-chrome-stable             ; mode "default"
  bindsym Shift+c exec google-chrome-stable --incognito ; mode "default"
  bindsym d       exec displayselect                    ; mode "default"
  bindsym n       exec nautilus                         ; mode "default"
  bindsym p       exec pavucontrol                      ; mode "default"
  bindsym m       exec nosqlbooster                     ; mode "default"
  bindsym v       exec code                             ; mode "default"
  bindsym r       exec retroarch                        ; mode "default"
  bindsym s       exec mysql-workbench                  ; mode "default"

  bindsym Escape         mode "default"
  bindsym Return         mode "default"
  bindsym backslash      mode "default"
  bindsym $mod+backslash mode "default"
}

set $mode_power_launcher "Run: [r]eboot, [o]ff, [h]ibernate"
bindsym $mod+Shift+backslash mode $mode_power_launcher

mode $mode_power_launcher{
  bindsym r       exec reboot              ; mode "default"
  bindsym o       exec poweroff            ; mode "default"
  bindsym h       exec systemctl hibernate ; mode "default"
  bindsym s       exec systemctl suspend   ; mode "default"

  bindsym Escape               mode "default"
  bindsym Return               mode "default"
  bindsym backslash            mode "default"
  bindsym $mod+backslash       mode "default"
  bindsym $mod+Shift+backslash mode "default"
}

set $mode_sounds "Sound: [m]aestruli, [a]irhorn"
bindsym $mod+equal mode $mode_sounds

mode $mode_sounds{
  bindsym a       exec oneoffplayer ~/.assets/sounds/airhorn.mp3         ; mode "default"
  bindsym m       exec oneoffplayer ~/.assets/sounds/maestruli_short.mp3 ; mode "default"
  bindsym Shift+m exec oneoffplayer ~/.assets/sounds/maestruli_long.mp3  ; mode "default"

  bindsym Escape     mode "default"
  bindsym Return     mode "default"
  bindsym equal      mode "default"
  bindsym $mod+equal mode "default"
}

set $sound_control "Soundctl: ]: V++, [: V--, [m]ute, [y]ankpath, [a]dd2playlist"
bindsym $mod+BackSpace mode $sound_control

mode $sound_control{
  bindsym Shift+bracketright exec amixer -q set Master 5%+ unmute ; exec unmute ; exec notify-send "vol++"
  bindsym Shift+bracketleft  exec amixer -q set Master 5%- unmute ; exec unmute ; exec notify-send "vol--"
  bindsym bracketright exec amixer -q set Master 5%+ unmute ; exec unmute ; exec notify-send "vol++" ; mode "default"
  bindsym bracketleft  exec amixer -q set Master 5%- unmute ; exec unmute ; exec notify-send "vol--" ; mode "default"
  bindsym m            exec unmute ; exec amixer -q set Master toggle; exec notify-send "mute toggle" ; mode "default"
  bindsym space        exec "mpvctl play-pause"; mode "default"
  bindsym period       exec "mpvctl next"; mode "default"
  bindsym comma        exec "mpvctl previous"; mode "default"
  bindsym Shift+period exec "mpvctl move-forward"
  bindsym Shift+comma  exec "mpvctl move-backwards"
  bindsym y            exec "mpvctl get-path |xclip -selection clipboard"; exec notify-send "yanked URI of $(mpvctl title) to clipboard" ; mode "default"
  bindsym a            exec "mpvctl add-to-playlist" ; mode "default"

  bindsym Escape         mode "default"
  bindsym Return         mode "default"
  bindsym BackSpace      mode "default"
  bindsym $mod+BackSpace mode "default"
}
bindsym XF86AudioPlay  exec "mpvctl play-pause"
bindsym XF86AudioPause exec "mpvctl play-pause"
bindsym XF86AudioNext  exec "mpvctl next"
bindsym XF86AudioPrev  exec "mpvctl previous"

set $headset_control "headset: [c]onnect, [d]isconnect, [a]2dp, [h]eadset, [f]xdaemon"
bindsym $mod+Shift+BackSpace mode $headset_control

mode $headset_control{
  bindsym a            exec "headsetctl a2dp" ; mode "default"
  bindsym h            exec "headsetctl headset" ; mode "default"
  bindsym c            exec "headsetctl connect" ; mode "default"
  bindsym d            exec "headsetctl disconnect" ; mode "default"
  bindsym f            exec "headsetctl fixdaemon" ; mode "default"

  bindsym Escape         mode "default"
  bindsym Return         mode "default"
  bindsym BackSpace      mode "default"
  bindsym $mod+BackSpace mode "default"
  bindsym $mod+Shift+BackSpace mode "default"
}

bar {
  mode dock
  modifier $mod
  status_command i3blocks
  position bottom
  tray_output primary
  tray_padding 0
  font pango: Hack 10

  colors {
    focused_background #000000
    background         #000000
    focused_statusline $foreground
    statusline         $secondary
    focused_separator  $foreground
    separator          $secondary

    #colorclass        border background text
    focused_workspace  $primary    $primary           $foreground
    active_workspace   $primary     $secondary        $primary
    inactive_workspace $background $secondary $foreground
    urgent_workspace   $alert      $alert             $foreground
  }
}
