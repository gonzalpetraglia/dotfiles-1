#exec --no-startup-id oneoffplayer ~/.assets/sounds/sega.mp3
exec_always --no-startup-id remapkeyboard
exec --no-startup-id display_auto
exec --no-startup-id feh --bg-fill ~/.laptop_bg.jpg

set $term st -f SourceCodePro:pixelsize=17

#Default borders
for_window [class="^.*"] border pixel 2

# dropdown notes
bindsym $mod+n exec --no-startup-id WORKING_DIR=~/logbook i3_tmux_dropdown i3notes nvim,\
  [title="i3notes"] scratchpad show, resize set 1250 740, border pixel 6, move position center, sticky enable

# dropdown terminal
bindsym $mod+semicolon exec --no-startup-id i3_tmux_dropdown i3terminal,\
  [title="i3terminal"] scratchpad show, resize set 1300 700, border pixel 6, move position center, sticky enable

set $ws1  "1: browser"
set $ws2  "2: "
set $ws3  "3: "
set $ws4  "4: "
set $ws5  "5: code"
set $ws6  "6: misc"
set $ws7  "7: pdf"
set $ws8  "8: "
set $ws9  "9: "
set $ws10 "10: browser"

workspace $ws1 output primary
workspace $ws2 output primary
workspace $ws3 output primary
workspace $ws4 output primary
workspace $ws5 output primary

workspace $ws6 output HDMI3
workspace $ws7 output HDMI3
workspace $ws8 output HDMI3
workspace $ws9 output HDMI3
workspace $ws10 output HDMI3

assign [class="qutebrowser"]   $ws6
assign [class="Zathura"]       $ws7
focus_on_window_activation urgent

font pango: Hack 0

set $color_background        #414A59
set $color_background_darker #303642
set $color_primary           #5294E2
set $color_alert             #CC575D
set $color_accent            #F5F6F7

#colorclass             border                   backgr.           text    indicator
client.focused          $color_primary           $color_primary    #00BAA7 #00DA8E
client.focused_inactive $color_background        $color_background #ffffff #484e50
client.unfocused        $color_background_darker $color_background #888888 #292d2e
client.urgent           $color_accent            $color_alert      #ffffff #900000

#set modkey to meta key
set $mod mod4 
set $up k
set $down j
set $left h
set $right l

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
# start a terminal
bindsym $mod+Return exec --no-startup-id $term -e tmux
bindsym $mod+Shift+Return exec --no-startup-id $term
# kill focused window
bindsym $mod+q kill
# start rofi
bindsym $mod+d exec rofi -show run

bindsym $mod+x exec display_auto
bindsym $mod+Shift+x exec display_standalone

# change focus
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

bindsym $mod+bracketleft  focus output left
bindsym $mod+bracketright focus output right

# move focused window
bindsym $mod+Shift+$left  move left 38 px
bindsym $mod+Shift+$down  move down 38 px
bindsym $mod+Shift+$up    move up 38 px
bindsym $mod+Shift+$right move right 38 px

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle
# focus the parent container
bindsym $mod+a focus parent
# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window.
bindsym $mod+minus scratchpad show

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# black out a screen
bindsym $mod+Shift+f exec feh -F ~/.assets/images/pitchblack.png

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# split in vertical orientation
bindsym $mod+v split v
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# toggle sticky 
bindsym $mod+g sticky toggle

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+Shift+r restart
bindsym $mod+r exec remapkeyboard

bindsym $mod+y resize shrink width 25 px or 6 ppt
bindsym $mod+u resize grow height 25 px or 6 ppt
bindsym $mod+i resize shrink height 25 px or 6 ppt
bindsym $mod+o resize grow width 25 px or 6 ppt

bindsym $mod+Shift+y resize shrink width 4 px or 1 ppt
bindsym $mod+Shift+u resize grow height 4 px or 1 ppt
bindsym $mod+Shift+i resize shrink height 4 px or 1 ppt
bindsym $mod+Shift+o resize grow width 4 px or 1 ppt

bindsym $mod+m fullscreen disable; floating enable; resize set 640 360; sticky enable

#block/suspend
bindsym $mod+Shift+b exec "i3lock -f -c 000000 && systemctl suspend"
bindsym $mod+b exec "i3lock -f -c 0f0f0f "

bindsym --release $mod+p exec "scrot -s ~/tmp_screenshot.png && xclip -selection clip-board -t image/png -i ~/tmp_screenshot.png"
bindsym --release $mod+Shift+p exec "grabc |head --bytes=7|xclip"

set $mode_launcher "Run: [q]utechat, [c]chome, [d]isplayselect, [n]autilus, [p]avucontrol, [v]scode, [r]etroarch, [m]ongo, [s]ql"
bindsym $mod+backslash mode $mode_launcher

mode $mode_launcher{
  bindsym q       exec qutechat                         ; mode "default"
  bindsym Shift+q exec qutebrowser                      ; mode "default"
  bindsym c       exec google-chrome-stable             ; mode "default"
  bindsym Shift+c exec google-chrome-stable --incognito ; mode "default"
  bindsym d       exec displayselect                    ; mode "default"
  bindsym n       exec nautilus                         ; mode "default"
  bindsym p       exec pavucontrol                      ; mode "default"
  bindsym m       exec nosqlbooster                     ; mode "default"
  bindsym v       exec code                             ; mode "default"
  bindsym r       exec retroarch                        ; mode "default"
  bindsym s       exec mysql-workbench                  ; mode "default"

  bindsym Escape         mode "default"
  bindsym Return         mode "default"
  bindsym backslash      mode "default"
  bindsym $mod+backslash mode "default"
}

set $mode_power_launcher "Run: [r]eboot, [o]ff, [h]ibernate"
bindsym $mod+Shift+backslash mode $mode_power_launcher

mode $mode_power_launcher{
  bindsym r       exec reboot              ; mode "default"
  bindsym o       exec poweroff            ; mode "default"
  bindsym h       exec systemctl hibernate ; mode "default"
  bindsym s       exec systemctl suspend   ; mode "default"

  bindsym Escape               mode "default"
  bindsym Return               mode "default"
  bindsym backslash            mode "default"
  bindsym $mod+backslash       mode "default"
  bindsym $mod+Shift+backslash mode "default"
}

set $mode_sounds "Sound: [m]aestruli, [a]irhorn"
bindsym $mod+equal mode $mode_sounds

mode $mode_sounds{
  bindsym a       exec oneoffplayer ~/.assets/sounds/airhorn.mp3         ; mode "default"
  bindsym m       exec oneoffplayer ~/.assets/sounds/maestruli_short.mp3 ; mode "default"
  bindsym Shift+m exec oneoffplayer ~/.assets/sounds/maestruli_long.mp3  ; mode "default"

  bindsym Escape     mode "default"
  bindsym Return     mode "default"
  bindsym equal      mode "default"
  bindsym $mod+equal mode "default"
}

set $sound_control "Soundctl: ]: V++, [: V--, m: mute"
bindsym $mod+BackSpace mode $sound_control

mode $sound_control{
  bindsym bracketright exec amixer -q set Master 5%+ unmute ; exec unmute ; exec notify-send "vol++"
  bindsym bracketleft  exec amixer -q set Master 5%- unmute ; exec unmute ; exec notify-send "vol--"
  bindsym m            exec unmute ; exec amixer -q set Master toggle; exec notify-send "mute toggle"
  bindsym space        exec playerctl play-pause ; exec unmute ; exec notify-send "play/pause"
  bindsym period       exec playerctl next       ; exec notify-send "next"
  bindsym comma        exec playerctl previous   ; exec notify-send "previous"

  bindsym Escape         mode "default"
  bindsym Return         mode "default"
  bindsym BackSpace      mode "default"
  bindsym $mod+BackSpace mode "default"
}

#For when i have multimedia keys
bindsym XF86AudioRaiseVolume exec amixer -q set Master unmute ; exec amixer -q set Master 5%+ ; exec unmute; exec notify-send "vol++"
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-; exec notify-send "vol--"
bindsym XF86AudioMute       exec unmute ; exec amixer -q set Master toggle; exec notify-send "mute toggle"

bindsym XF86AudioPlay        exec playerctl play-pause ; exec unmute ; exec notify-send "play/pause"
bindsym XF86AudioNext        exec playerctl next       ; exec notify-send "next"
bindsym XF86AudioPrev        exec playerctl previous   ; exec notify-send "previous"

bar {
  status_command i3blocks
  position bottom
  output HDMI3
  font pango: Hack 10
  tray_output primary
  colors {
    background $color_background_darker
    statusline $color_accent
    separator $color_primary

    #colorclass        border background text
    focused_workspace  #4c7899 $color_primary $color_accent
    active_workspace   #333333 #5f676a        #ffffff
    inactive_workspace #333333 #222222        #888888
    urgent_workspace   #2f343a $color_alert   #ffffff
    binding_mode       #2f343a #900000        #ffffff
  }
}

