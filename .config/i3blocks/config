# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[mpv]
command=${HOME}/.config/i3blocks/mpvstatus
interval=2
separator=true

[load_average]
interval=5
separator=false

[temperature]
interval=5
separator=false

[cpu_usage]
interval=5
separator=false

[memory]
interval=5

[iface]
#instance=wlan0
interval=10
separator=false

[battery]
interval=30

[time]
command=date +'%m-%d %R'
interval=60
